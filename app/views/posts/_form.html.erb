<%= form_with model: @author, url: new_user_post_url, method: :post, local: true, scope: :posts do |form| %>
  <%= form.label :title%>
  <%= form.text_field :title, placeholder: "title" %><br><br>
  <%= form.label :text %>
  <%= form.text_area :text, placeholder: "Write your post here" %><br>  
  <%=form.submit "Post Message"%>
<% end %>
